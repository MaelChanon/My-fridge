<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    app:cardCornerRadius="10dp"
    android:background="@color/black"
    >
    <LinearLayout
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:elevation="5dp"
                android:id="@+id/imageAliment"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"

                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/food_logo" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/aliment_name"
                android:text="nom de l'aliment"
                android:textSize="11sp"
                android:fontFamily="@font/times_new_roman_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/aliment_days"
                android:text="Nombre de jours restants"
                android:textSize="15sp"
                android:fontFamily="@font/times_new_roman_bold"
                android:textColor="@color/light_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/quantite_restante"
                android:gravity="center"
                android:fontFamily="@font/times_new_roman_bold"
                android:textSize="13sp"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="6 exemplaires"/>
        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>