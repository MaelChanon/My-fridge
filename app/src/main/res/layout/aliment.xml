<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:elevation="5dp"
        android:id="@+id/imageAliment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/test" />
    />
    <LinearLayout
        android:background="@drawable/round_border"
        android:radius="100dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/poid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1500 calories/100g"
            android:gravity="center">
        </TextView>
        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date de pÃ©remption"
            android:gravity="center"
            android:ems="10"
            android:inputType="none"
            android:focusable="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">
                <TextView
                    android:paddingTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proteines"
                    android:layout_marginRight="5dp"
                    android:color="#FFFF"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/proteinesBar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:scaleY="3"
                        android:progress="50"
                        android:progressTint ="#FF0000"
                        style="?android:attr/progressBarStyleHorizontal"
                        >
                    </ProgressBar>
                    <TextView
                        android:id="@+id/proteinesText"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 g "
                        android:color="#FFFF"/>
                </LinearLayout>
e            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">
                <TextView
                    android:paddingTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/graisses"
                    android:layout_marginRight="5dp"
                    android:color="#FFFF"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/fatBar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:scaleY="3"
                        android:progress="70"
                        android:progressTint ="#FF0000"
                        style="?android:attr/progressBarStyleHorizontal"
                        >
                    </ProgressBar>
                    <TextView
                        android:id="@+id/fatText"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 g "
                        android:color="#FFFF"/>
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">
                <TextView
                    android:paddingTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/glucides"
                    android:layout_marginRight="5dp"
                    android:color="#FFFF"/>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/glucidesBar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:scaleY="3"
                        android:progress="50"
                        android:progressTint ="#FF0000"
                        style="?android:attr/progressBarStyleHorizontal"
                        >
                    </ProgressBar>
                    <TextView
                        android:id="@+id/glucidesText"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 g "
                        android:color="#FFFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <TextView
                    android:paddingTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fibres     "
                    android:layout_marginRight="5dp"
                    android:color="#FFFF"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">
                    <ProgressBar
                        android:id="@+id/FiberBar"

                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:scaleY="3"
                        android:progress="30"

                        android:progressTint ="#FF0000"
                        style="?android:attr/progressBarStyleHorizontal"
                        >
                    </ProgressBar>
                    <TextView
                        android:id="@+id/FiberText"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 g "
                        android:color="#FFFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:id="@+id/buttonMoins"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="-"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/quantite"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/quantit"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:id="@+id/buttonPlus"
                app:cornerRadius="28dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="+"
                android:textSize="20sp"/>

        </LinearLayout>
        <Button
            android:id="@+id/validerAliment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valider"
            android:layout_gravity="center"></Button>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>